<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.vanity.mobilevanity.cosmetic.CosmeticDetailActivity">


    <Button
        android:id="@+id/btn_quit"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="x" />

    <ImageView
        android:id="@+id/image_cosmetic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn_quit"
        android:src="@android:drawable/sym_def_app_icon" />

    <Button
        android:id="@+id/btn_saleinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:text="sale information" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Brand"
        android:id="@+id/text_brand"
        android:layout_alignTop="@+id/image_cosmetic"
        android:layout_toRightOf="@+id/image_cosmetic"
        android:layout_toEndOf="@+id/image_cosmetic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CosmeticName"
        android:id="@+id/text_cosmetic_name"
        android:layout_below="@+id/text_brand"
        android:layout_toRightOf="@+id/image_cosmetic"
        android:layout_toEndOf="@+id/image_cosmetic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_cosmetic_detail_register"
        android:id="@+id/textView6"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/image_cosmetic"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Year"
        android:id="@+id/text_register_year"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignRight="@+id/text_cosmetic_name"
        android:layout_alignEnd="@+id/text_cosmetic_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:layout_alignTop="@+id/text_register_year"
        android:layout_toRightOf="@+id/text_register_year"
        android:layout_toEndOf="@+id/text_register_year"
        android:text="@string/activity_cosmetic_detail_register_year" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Month"
        android:id="@+id/text_register_month"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp"
        android:layout_alignTop="@+id/textView7"
        android:layout_toRightOf="@+id/textView7"
        android:layout_toEndOf="@+id/textView7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_cosmetic_detail_register_month"
        android:id="@+id/textView8"
        android:layout_alignTop="@+id/text_register_month"
        android:layout_toRightOf="@+id/text_register_month"
        android:layout_toEndOf="@+id/text_register_month" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:id="@+id/text_register_date"
        android:layout_alignTop="@+id/textView8"
        android:layout_toRightOf="@+id/textView8"
        android:layout_toEndOf="@+id/textView8"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_cosmetic_detail_register_date"
        android:id="@+id/textView9"
        android:layout_alignTop="@+id/text_register_date"
        android:layout_toRightOf="@+id/text_register_date"
        android:layout_toEndOf="@+id/text_register_date" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_register"
        android:layout_alignBottom="@+id/textView9"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_cosmetic_detail_usebydate"
        android:id="@+id/textView10"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="37dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Year"
        android:id="@+id/text_usebydate_year"
        android:layout_alignBottom="@+id/textView10"
        android:layout_alignLeft="@+id/text_register_year"
        android:layout_alignStart="@+id/text_register_year" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_cosmetic_detail_usebydate_year"
        android:id="@+id/textView11"
        android:layout_alignBottom="@+id/text_usebydate_year"
        android:layout_toRightOf="@+id/text_usebydate_year"
        android:layout_toEndOf="@+id/text_usebydate_year" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Month"
        android:id="@+id/text_usebydate_month"
        android:layout_alignBottom="@+id/textView11"
        android:layout_alignLeft="@+id/text_register_month"
        android:layout_alignStart="@+id/text_register_month" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_cosmetic_detail_usebydate_month"
        android:id="@+id/textView12"
        android:layout_alignBottom="@+id/text_usebydate_month"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:id="@+id/text_usebydate_date"
        android:layout_alignBottom="@+id/textView12"
        android:layout_alignLeft="@+id/text_register_date"
        android:layout_alignStart="@+id/text_register_date" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_cosmetic_detail_usebydate_date"
        android:id="@+id/textView14"
        android:layout_alignBottom="@+id/text_usebydate_date"
        android:layout_toRightOf="@+id/text_usebydate_date"
        android:layout_toEndOf="@+id/text_usebydate_date" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_usebydate"
        android:layout_alignBottom="@+id/textView14"
        android:layout_alignLeft="@+id/image_register"
        android:layout_alignStart="@+id/image_register" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BrandName"
        android:id="@+id/text_brand_name"
        android:layout_below="@+id/textView10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="66dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_cosmetic_detail_sale_information"
        android:id="@+id/textView13"
        android:layout_alignTop="@+id/text_brand_name"
        android:layout_toRightOf="@+id/textView6"
        android:layout_toEndOf="@+id/textView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SaleInformation"
        android:id="@+id/text_sale_information"
        android:layout_below="@+id/text_brand_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/image_usebydate"
        android:layout_alignEnd="@+id/image_usebydate" />

</RelativeLayout>
