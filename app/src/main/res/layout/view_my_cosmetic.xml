<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_cosmetic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/text_color_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/image_cosmetic"
            android:layout_toRightOf="@+id/image_cosmetic"
            android:text="ColorCode"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/text_color_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/text_color_code"
            android:layout_toRightOf="@+id/text_color_code"
            android:text="ColorName"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/text_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_color_code"
            android:layout_toEndOf="@+id/image_cosmetic"
            android:layout_toRightOf="@+id/image_cosmetic"
            android:text="productName"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/text_brand_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/image_cosmetic"
            android:layout_toEndOf="@+id/image_cosmetic"
            android:layout_toRightOf="@+id/image_cosmetic"
            android:text="BrandName"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/image_new"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/text_color_name"
            android:layout_toEndOf="@+id/text_color_name"
            android:src="@android:drawable/btn_star_big_on" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="D-Day"
        android:id="@+id/text_dday"
        android:layout_gravity="center_vertical|right|end"/>
</FrameLayout>