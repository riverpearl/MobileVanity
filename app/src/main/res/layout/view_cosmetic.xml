<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:layout_marginBottom="@dimen/view_my_cosmetic_divider_height">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_cosmetic"
            android:layout_width="@dimen/view_cosmetic_image_size"
            android:layout_height="@dimen/view_cosmetic_image_size"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/view_cosmetic_image_margin_right"
            android:background="@android:color/white" />

        <TextView
            android:id="@+id/text_color_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_product_name"
            android:layout_marginRight="@dimen/view_cosmetic_cosmetic_color_margin_right"
            android:layout_marginBottom="20dp"
            android:layout_toEndOf="@+id/image_cosmetic"
            android:layout_toRightOf="@+id/image_cosmetic"
            android:text="ColorCode"
            android:textSize="@dimen/view_cosmetic_cosmetic_name_font_size"
            android:textColor="@color/colorSub"/>

        <TextView
            android:id="@+id/text_color_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/text_color_code"
            android:layout_toEndOf="@+id/text_color_code"
            android:layout_toRightOf="@+id/text_color_code"
            android:text="ColorName"
            android:textSize="@dimen/view_cosmetic_cosmetic_name_font_size"
            android:textColor="@color/colorSub"/>

        <TextView
            android:id="@+id/text_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/text_color_code"
            android:layout_alignStart="@+id/text_color_code"
            android:layout_marginTop="@dimen/default_margin"
            android:layout_marginBottom="4dp"
            android:layout_toEndOf="@+id/image_cosmetic"
            android:layout_toRightOf="@+id/image_cosmetic"
            android:text="productName"
            android:textSize="@dimen/view_cosmetic_product_font_size"
            android:textColor="@color/colorSub"
            android:singleLine="true" />

        <TextView
            android:id="@+id/text_brand_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BrandName"
            android:textSize="@dimen/view_cosmetic_brand_name_font_size"
            android:textColor="@color/colorSub"
            android:layout_below="@+id/text_color_code"
            android:layout_alignLeft="@+id/text_color_code"
            android:layout_alignStart="@+id/text_color_code" />

    </RelativeLayout>

</RelativeLayout>