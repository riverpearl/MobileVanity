<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/view_beauty_tip_item_rv_width"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/default_margin"
    android:layout_marginRight="@dimen/default_margin"
    android:layout_marginTop="@dimen/default_list_margin"
    android:background="@drawable/shape_stroke_square"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/shape_stroke_line" />

    <TextView
        android:id="@+id/text_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_beauty_tip_item_title_height"
        android:layout_marginLeft="@dimen/default_list_margin"
        android:gravity="center"
        android:text="Title"
        android:textColor="@color/colorSub"
        android:textSize="@dimen/view_beauty_tip_item_default_font_size" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/shape_stroke_line" />

    <ImageView
        android:id="@+id/image_beauty_tip_item"
        android:layout_width="@dimen/view_beauty_tip_item_image_size"
        android:layout_height="@dimen/view_beauty_tip_item_image_size"
        android:layout_marginLeft="@dimen/view_beauty_tip_item_image_margin"
        android:layout_marginRight="@dimen/view_beauty_tip_item_image_margin"
        android:layout_marginTop="0dp"
        android:src="@mipmap/ic_launcher" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/shape_stroke_line" />

    <TextView
        android:id="@+id/text_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_beauty_tip_item_content_height"
        android:layout_marginLeft="@dimen/default_list_margin"
        android:gravity="center"
        android:text="Content"
        android:textColor="@color/colorSub"
        android:textSize="@dimen/view_beauty_tip_item_content_font_size" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/shape_stroke_line" />

    <LinearLayout
        android:id="@+id/layout_user_profile"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_beauty_tip_item_user_profile_view_height"
        android:layout_marginLeft="@dimen/default_list_margin"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:id="@+id/image_profile"
            android:layout_width="@dimen/view_beauty_tip_item_user_profile_image_size"
            android:layout_height="@dimen/view_beauty_tip_item_user_profile_image_size"
            android:layout_marginRight="@dimen/view_beauty_tip_item_user_profile_margin"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/text_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="User"
            android:textColor="#636262"
            android:textSize="@dimen/view_beauty_tip_item_default_font_size" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/shape_stroke_line" />

    <LinearLayout
        android:id="@+id/layout_info"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_beauty_tip_item_hit_like_comment_height"
        android:layout_marginLeft="@dimen/default_list_margin"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_read"
            android:layout_width="@dimen/view_beauty_tip_item_image_margin"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:src="@drawable/icon_read" />

        <TextView
            android:id="@+id/text_read"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/view_beauty_tip_item_hit_like_comment_margin"
            android:gravity="center"
            android:text="Read"
            android:textSize="@dimen/view_beauty_tip_item_content_font_size" />

        <ImageView
            android:id="@+id/image_like"
            android:layout_width="@dimen/view_beauty_tip_item_image_margin"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/view_beauty_tip_item_image_margin"
            android:src="@drawable/icon_like" />

        <TextView
            android:id="@+id/text_like"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/view_beauty_tip_item_hit_like_comment_margin"
            android:gravity="center"
            android:text="Like"
            android:textSize="@dimen/view_beauty_tip_item_content_font_size" />


        <ImageView
            android:id="@+id/image_comment"
            android:layout_width="@dimen/view_beauty_tip_item_image_margin"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/view_beauty_tip_item_image_margin"
            android:src="@drawable/icon_comment" />

        <TextView
            android:id="@+id/text_comment"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/view_beauty_tip_item_hit_like_comment_margin"
            android:gravity="center"
            android:text="Comment"
            android:textSize="@dimen/view_beauty_tip_item_content_font_size" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/shape_stroke_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_beauty_tip_item_like_comment_height"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_like"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:drawableLeft="@drawable/selector_beauty_tip_like"
            android:drawableStart="@drawable/selector_beauty_tip_like"
            android:paddingLeft="@dimen/view_beauty_tip_item_btn_like_comment_margin" />

        <Button
            android:id="@+id/btn_comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:drawableEnd="@drawable/selector_beauty_tip_comment"
            android:drawableRight="@drawable/selector_beauty_tip_comment"
            android:paddingRight="@dimen/view_beauty_tip_item_btn_like_comment_margin" />
    </LinearLayout>


</LinearLayout>