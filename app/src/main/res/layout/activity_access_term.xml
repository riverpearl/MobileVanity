<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context="com.vanity.mobilevanity.setting.AccessTermActivity">

    <include
        android:id="@+id/toolbar_access_term"
        layout="@layout/view_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar_access_term"
        android:layout_margin="@dimen/default_margin"
        android:padding="@dimen/default_padding"
        android:background="@drawable/shape_stroke_square"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/text_accessterm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:textColor="@color/colorAlert"
            android:textSize="@dimen/activity_access_term_text_size" />
    </ScrollView>

    <ImageView
        android:id="@+id/toolbar_shadow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/shape_toolbar_shadow"
        android:layout_below="@id/toolbar_access_term"
        android:layout_gravity="center_horizontal|bottom" />
</RelativeLayout>
