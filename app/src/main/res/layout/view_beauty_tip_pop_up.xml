<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layout_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackground"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/image_userprofile"
            android:layout_width="@dimen/view_beauty_tip_pop_up_image_size"
            android:layout_height="@dimen/view_beauty_tip_pop_up_image_size"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/view_beauty_tip_pop_up_image_margin"
            android:src="@mipmap/ic_launcher" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_nickname"
                android:layout_width="@dimen/view_beauty_tip_pop_up_nickname_width"
                android:layout_height="@dimen/view_beauty_tip_pop_up_nickname_height"
                android:layout_alignParentTop="true"
                android:text="@string/nickname_text"
                android:textColor="@color/colorSub"
                android:textSize="@dimen/view_beauty_tip_pop_up_nickname_font_size"
                android:textStyle="bold"
                android:paddingTop="10dp" />

            <TextView
                android:id="@+id/text_comment"
                android:layout_width="@dimen/view_beauty_tip_pop_up_comment_width"
                android:layout_height="@dimen/view_beauty_tip_pop_up_comment_height"
                android:layout_below="@+id/text_nickname"
                android:text="@string/comment_text"
                android:textColor="@color/colorSub"
                android:textSize="@dimen/view_beauty_tip_pop_up_comment_font_size" />
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:layout_below="@+id/layout_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/shape_stroke_line" />
</RelativeLayout>